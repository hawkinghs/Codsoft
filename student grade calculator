import java.util.Scanner;

class Student {
    private String name;
    private double[] marks;
    private double totalMarks;
    private double percentage;
    private String grade;

    public Student(String name, int numSubjects) {
        this.name = name;
        this.marks = new double[numSubjects];
    }

    public void setMarks(int subjectIndex, double mark) {
        marks[subjectIndex] = mark;
    }

    public void calculateResults() {
        totalMarks = 0;
        for (double mark : marks) {
            totalMarks += mark;
        }
        percentage = totalMarks / marks.length;
        calculateGrade();
    }

    private void calculateGrade() {
        if (percentage >= 90) {
            grade = "A+";
        } else if (percentage >= 80) {
            grade = "A";
        } else if (percentage >= 70) {
            grade = "B+";
        } else if (percentage >= 60) {
            grade = "B";
        } else if (percentage >= 50) {
            grade = "C";
        } else if (percentage >= 40) {
            grade = "D";
        } else {
            grade = "F";
        }
    }

    public void displayResult() {
        System.out.println("\n===== Result Summary =====");
        System.out.println("Student Name: " + name);
        System.out.println("Total Marks: " + totalMarks + " / " + (marks.length * 100));
        System.out.printf("Percentage: %.2f%%\n", percentage);
        System.out.println("Grade: " + grade);
        System.out.println("Status: " + (grade.equals("F") ? "FAIL" : "PASS"));
    }
}

public class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        System.out.println("===== Student Grade Calculator =====");

        System.out.print("Enter Student Name: ");
        String name = sc.nextLine();

        System.out.print("Enter Number of Subjects: ");
        int numSubjects = sc.nextInt();

        Student student = new Student(name, numSubjects);

        // Input marks
        for (int i = 0; i < numSubjects; i++) {
            System.out.print("Enter marks for Subject " + (i + 1) + " (out of 100): ");
            double mark = sc.nextDouble();

            // Validate marks
            while (mark < 0 || mark > 100) {
                System.out.print("Invalid marks! Enter again (0-100): ");
                mark = sc.nextDouble();
            }

            student.setMarks(i, mark);
        }

        // Calculate and display results
        student.calculateResults();
        student.displayResult();

        sc.close();
    }
}

